
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/hr/css/table.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/vue-2.4.0.js"></script>
</head>
<body>
    <div id="div1">
        <table width="100%">
            <tr>
                <td>
                    <font color="black">
                        您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--I级机构设置
                    </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    @Html.ActionLink("添加", "Add")
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr>
                <td width="20%" class="TD_STYLE1">
                    I级机构编号
                </td>
                <td width="20%" class="TD_STYLE1">
                    I级机构名称
                </td>
                <td width="25%" class="TD_STYLE1">
                    薪酬发放责任人编号
                </td>
                <td width="25%" class="TD_STYLE1">
                    销售责任人编号
                </td>
                <td width="5%" class="TD_STYLE1">
                    变更
                </td>
                <td width="5%" class="TD_STYLE1">
                    删除
                </td>
            </tr>
            <tr v-for="(item,index) in list">
                <td class="TD_STYLE2">{{item.Oid}} </td>

                <td class="TD_STYLE2">
                    {{item.OName}}
                </td>
                <td class="TD_STYLE2">
                    {{item.Pid}}
                </td>
                <td class="TD_STYLE2">
                    {{item.SID}}
                </td>
                <td class="TD_STYLE2">
                    <a class="ng-binding ng-scope" v-bind:href="['/Oneorgan/Update/?id='+item.Oid]">变更</a>

                </td>
                <td class="TD_STYLE2"><a class="ng-binding ng-scope" v-bind:href="['/Oneorgan/Del/?id='+item.Oid]" onclick="return confirm('是否删除')">删除</a></td>
            </tr>
        </table>
        <p>

    </div>
    <script type="text/javascript">
                var vm = new Vue({
                    el: "#div1",
                    data: {
                        list: null
                    },
                    methods: {
                        load: function () {
                            var t = this;
                            $.ajax({
                                url: "/Oneorgan/Index2",
                                type: "post",
                                success: function (msg) {
                                    var dt = eval("(" + msg + ")");
                                    t.list = dt;
                                }
                            });
                        }
                    },
                    created: function () {
                        this.load();
                    },
                });
    </script>
</body>
</html>
