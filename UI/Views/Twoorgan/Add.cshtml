@model IEnumerable<Model.OneorganModel>
@{
    Layout = null;
}

<!DOCTYPE html>
<style>
    .color {
        color: red;
    }
</style>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
    <link href="~/hr/css/table.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</head>
<body>
    @using (Html.BeginForm("Add", "Twoorgan", FormMethod.Post))
    {
        <input type="hidden" id="firstKindName" name="cfsk.firstKindName">
        <table width="100%">
            <tr>
                <td>
                    <font color="black">
                        您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--II级机构设置--II级机构添加
                    </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="submit" value="提交" class="BUTTON_STYLE1">
                    <input type="button" value="返回" class="BUTTON_STYLE1"
                           onclick="history.back();">
                </td>
            </tr>
        </table>


        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr>
                <td width="19%" class="TD_STYLE1">
                    I级机构名称
                </td>
                <td width="81%" class="TD_STYLE2">
                    <select name="cfsk.firstKindId" id="firstKindId">
                        <option>请选择I级机构名称...</option>
                        @foreach (var item in Model)
                        {

                            <option name="opt" value=@Html.DisplayFor(modelItem => item.Oid)>@Html.DisplayFor(modelItem => item.OName)</option>
                        }
                    </select>


                </td>
            </tr>
            <tr>
                <td width="19%" class="TD_STYLE1">
                    II级机构编号
                </td>
                <td width="81%" class="TD_STYLE2"></td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    II级机构名称
                </td>
                <td class="TD_STYLE2">
                    @Html.TextBox("TName",null,new { @class= "INPUT_STYLE1" })
                    @Html.ValidationMessage("TName", new { @class = "color" })
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    薪酬发放责任人编号（多个编号之间请用"半角逗号"加"一个空格"隔开，如", "）
                </td>
                <td class="TD_STYLE2">
                    @Html.TextBox("Pid", null, new { @class = "INPUT_STYLE1" })
                    @Html.ValidationMessage("Pid", new { @class = "color" })
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    销售责任人编号（多个编号之间请用"半角逗号"加"一个空格"隔开，如", "）
                </td>
                <td class="TD_STYLE2">
                   @Html.TextBox("Sid", null, new { @class = "INPUT_STYLE1" })
                   @Html.ValidationMessage("Sid", new { @class = "color" })
                </td>
            </tr>
        </table>
    }
</body>
</html>
