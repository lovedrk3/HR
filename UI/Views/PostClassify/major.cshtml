
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>major</title>
    <link href="~/hr/css/table.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/vue-2.4.0.js"></script>
</head>
<body>
    <table width="100%">
        <tr>
            <td>
                <font color="black">
                    您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--职位设置
                </font>
            </td>
        </tr>
        <tr>
            <td align="right">
                <a class="BUTTON_STYLE1" href="/PostClassify/major_add">添加</a>
            </td>
        </tr>
    </table>
    <div id="div1">
        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr>
                <td width="22%" class="TD_STYLE1">
                    职位分类编号
                </td>
                <td width="23%" class="TD_STYLE1">
                    职位分类名称
                </td>
                <td width="26%" class="TD_STYLE1">
                    职位编号
                </td>
                <td width="24%" class="TD_STYLE1">
                    职位名称
                </td>
                <td width="5%" class="TD_STYLE1"></td>
            </tr>
            <tr v-for="item in list">
                <td class="TD_STYLE2">
                    {{item.PostClassifyId}}
                </td>
                <td class="TD_STYLE2">
                    {{item.PostClassifyName}}
                </td>
                <td class="TD_STYLE2">
                    {{item.PostId}}
                </td>
                <td class="TD_STYLE2">
                    {{item.PostName}}
                </td>
                <td class="TD_STYLE2">
                    <a href="#" v-on:click="Delete([item.PostId])">删除</a>
                </td>
            </tr>
        </table>
    </div>
    <script type="text/javascript">
        var vm = new Vue({
            el: "#div1",
            data: {
                list: null
            },
            methods: {
                load: function () {
                    var t = this;//把控制层赋值给t
                    $.ajax({
                        url: "/PostClassify/major2",
                        type: "post",
                        success: function (msg) {
                            var dt = eval("(" + msg + ")");
                            t.list = dt;
                        }
                    });
                },
                Delete: function (id) {
                    if (confirm("确定要删除？")) {
                        url = "/PostClassify/major_Del";
                        parameter = { PostId: id };
                        $.post(url, parameter, function (data) {
                            alert("删除成功！");
                            window.location = "/PostClassify/major";
                        });
                    }
                }
            },
            created: function () {
                this.load();
            }
        });
    </script>
</body>
</html>
