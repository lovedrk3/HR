
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update</title>
    <link href="~/hr/css/table.css" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm("Update", "Treeorgan", FormMethod.Post))
    {
        <table width="100%">
            <tr>
                <td>
                    <font color="black">
                        您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--III级机构设置--III级机构变更
                    </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="submit" value="提交" class="BUTTON_STYLE1">
                    <input type="button" value="返回" class="BUTTON_STYLE1"
                           onclick="history.back();">
                </td>
            </tr>
        </table>

        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            @foreach (var item in ViewBag.list2)
            {
                <tr>
                    <td width="19%" class="TD_STYLE1">
                        I级机构名称
                    </td>
                    <td width="81%" class="TD_STYLE2">
                        <input type="text" readonly="readonly" class="INPUT_STYLE1" name="cftk.firstKindName" value=@item["OName"] />
                        <input type="hidden" name="cffk.firstKindId123Oid" value="@item["Oid"]"
                               readonly="readonly" class="INPUT_STYLE1">
                    </td>
                </tr>
                <tr>
                    <td width="19%" class="TD_STYLE1">
                        II级机构名称
                    </td>
                    <td width="81%" class="TD_STYLE2">
                        <input type="text" readonly="readonly" class="INPUT_STYLE1" name="cftk.secondKindName" value=@item["TName"] />
                        <input type="hidden" name="cffk.firstKindId123Tid" value="@item["Tid"]"
                               readonly="readonly" class="INPUT_STYLE1">
                    </td>
                </tr>
                <tr>
                    <td width="19%" class="TD_STYLE1">
                        III级机构编号
                    </td>
                    <td width="81%" class="TD_STYLE2">
                        <input type="text" readonly="readonly" class="INPUT_STYLE1" name="cftk.thirdKindId" value="@item["Thid"]" />
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        III级机构名称
                    </td>
                    <td class="TD_STYLE2">
                        <input type="text" readonly="readonly" class="INPUT_STYLE1" name="cftk.thirdKindName" value=@item["ThName"] />
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        销售责任人编号（多个编号之间请用"半角逗号"加"一个空格"隔开，如", "）
                    </td>
                    <td class="TD_STYLE2">
                        <textarea cols="120" class="TEXTAREA_STYLE1" name="cftk.thirdKindSaleId">@item["Sid"]</textarea>
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        是否为零售店（是/否）
                    </td>
                    <td class="TD_STYLE2">
                        <select name="cftk.thirdKindIsRetail">
                            @if (item["yesno"] == "1")
                            {
                                <option selected="selected" value="1">是</option>
                                <option value="2">否</option>
                            }
                            else
                            {
                                <option value="1">是</option>
                                <option selected="selected" value="2">否</option>
                            }
                        </select>
                    </td>
                </tr>
            }
        </table>
    }
</body>
</html>
